@model IEnumerable<DRK.ProgDec.BL.Models.Declaration>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p class="m-2">
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
         
            <th>
                @Html.DisplayNameFor(model => model.ChangeDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProgramName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DegreeTypeName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.ChangeDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProgramName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DegreeTypeName)
            </td>
            <td>
                
                
                <a class="btn btn-sm btn-primary" asp-route-id="@item.ID" asp-action="Edit">Edit</a>
                <a class="btn btn-sm btn-primary" asp-route-id="@item.ID" asp-action="Details">Details</a>
                <a class="btn btn-sm btn-primary" asp-route-id="@item.ID" asp-action="Delete">Delete</a>
@*                <a class="btn btn-sm btn-primary" asp-route-id="@item.ID" asp-action="Add" asp-controller="ShoppingCart">+</a>
            *@   <input class="btn btn-sm btn-primary"
                    type="button"
                    onclick="AddToCart(@item.ID)" value="+" />


            </td>
        </tr>
}
    </tbody>
</table>
